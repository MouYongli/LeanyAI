# syntax=docker/dockerfile:1

FROM python:3.10-slim

WORKDIR /app

# 安装依赖
COPY fastapi_app/requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# 复制 FastAPI 项目代码
COPY fastapi_app/ .

# 暴露端口
EXPOSE 8000

# 启动命令（可被 docker-compose 覆盖）
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
